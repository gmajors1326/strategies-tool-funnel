generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                        String           @id @default(cuid())
  name                      String?
  email                     String           @unique
  emailVerifiedAt           DateTime?
  plan                      Plan             @default(FREE)
  freeVerifiedRunsRemaining Int              @default(3)
  createdAt                 DateTime         @default(now())
  updatedAt                 DateTime         @updatedAt
  activeOrgId               String?
  isAdmin                   Boolean          @default(false)
  aiUsageLogs               AiUsageLog[]
  otps                      Otp[]
  entitlements              PlanEntitlement?
  profile                   Profile?
  supportTickets            SupportTicket[]
  toolRuns                  ToolRun[]

  @@index([email])
  @@index([plan])
  @@index([activeOrgId])
  @@index([isAdmin])
}

model Profile {
  id               String   @id @default(cuid())
  userId           String   @unique
  followerRange    String?
  postingFrequency String?
  engagementTime   String?
  primaryGoal      String?
  biggestFriction  String?
  niche            String?
  sellingType      String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model ToolRun {
  id          String   @id @default(cuid())
  userId      String?
  toolKey     String
  inputsJson  Json
  outputsJson Json
  createdAt   DateTime @default(now())
  toolId      String?
  toolSlug    String?
  input       Json?
  output      Json?
  user        User?    @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([toolKey])
  @@index([toolSlug])
  @@index([userId, toolSlug, createdAt])
  @@index([createdAt])
}

model Otp {
  id        String   @id @default(cuid())
  email     String
  codeHash  String
  expiresAt DateTime
  attempts  Int      @default(0)
  createdAt DateTime @default(now())
  user      User     @relation(fields: [email], references: [email], onDelete: Cascade)

  @@index([email])
  @@index([expiresAt])
}

model PlanEntitlement {
  id        String   @id @default(cuid())
  userId    String   @unique
  dmEngine  Boolean  @default(false)
  strategy  Boolean  @default(false)
  allAccess Boolean  @default(false)
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model AdminAuditLog {
  id         String   @id @default(cuid())
  actorId    String?
  actorEmail String?
  action     String
  target     String?
  meta       Json?
  createdAt  DateTime @default(now())

  @@index([actorEmail])
  @@index([createdAt])
}

model KnowledgeItem {
  id           String   @id @default(cuid())
  key          String   @unique
  category     String
  tags         String[] @default([])
  content      String
  priority     Int      @default(0)
  planRequired String   @default("free")
  style        String   @default("both")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([category])
  @@index([planRequired])
  @@index([style])
  @@index([priority])
}

model PromptProfile {
  id            String   @id @default(cuid())
  name          String   @unique
  style         String
  dos           String
  donts         String
  bannedPhrases String[] @default([])
  toneNotes     String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([style])
}

model PromptRubric {
  id               String   @id @default(cuid())
  toolKey          String   @unique
  inputHints       String
  outputSchemaJson Json
  reasoningRules   String
  safetyRules      String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model AiUsageLog {
  id           String   @id @default(cuid())
  userId       String?
  toolKey      String
  style        String?
  tokensIn     Int?
  tokensOut    Int?
  costEstimate Float?
  createdAt    DateTime @default(now())
  user         User?    @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([toolKey])
  @@index([createdAt])
}

model ToolFeedback {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id    String
  tool_id    String
  run_id     String?
  rating     Int?
  thumbs     String?
  tags       Json?
  comment    String?
  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @default(now()) @db.Timestamptz(6)

  @@index([run_id])
  @@index([tool_id])
  @@index([user_id])
  @@index([user_id, tool_id, created_at], map: "ToolFeedback_user_tool_created_idx")
}

model ToolBonusRuns {
  id           String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id      String
  tool_id      String?
  runs_granted Int
  runs_used    Int       @default(0)
  reason       String?
  expires_at   DateTime? @db.Timestamptz(6)
  granted_by   String?
  created_at   DateTime  @default(now()) @db.Timestamptz(6)
  updated_at   DateTime  @default(now()) @db.Timestamptz(6)

  @@index([tool_id])
  @@index([user_id, expires_at], map: "ToolBonusRuns_user_expires_idx")
  @@index([user_id])
  @@index([user_id, tool_id], map: "ToolBonusRuns_user_tool_idx")
}

model TokenLedger {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id      String
  event_type   String
  tokens_delta Int
  tool_id      String?
  run_id       String?
  reason       String?
  stripe_payment_intent_id String? @unique
  created_at   DateTime @default(now()) @db.Timestamptz(6)

  @@index([run_id])
  @@index([user_id, created_at(sort: Desc)], map: "TokenLedger_user_created_idx")
  @@index([user_id, event_type, created_at(sort: Desc)], map: "TokenLedger_user_event_created_idx")
}

model BillingCustomer {
  id               String   @id @default(cuid())
  userId           String   @unique
  stripeCustomerId String   @unique
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([userId])
}

model BillingSubscription {
  id                    String   @id @default(cuid())
  userId                String
  stripeSubscriptionId  String   @unique
  stripePriceId         String
  status                String
  currentPeriodEnd      DateTime?
  cancelAtPeriodEnd     Boolean  @default(false)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@index([userId])
  @@index([status])
}

model BillingEvent {
  id            String   @id @default(cuid())
  stripeEventId String   @unique
  type          String
  payloadJson   Json
  receivedAt    DateTime @default(now())

  @@index([type])
  @@index([receivedAt])
}

model ProductEvent {
  id        String   @id @default(cuid())
  userId    String?
  eventName String
  metaJson  Json?
  createdAt DateTime @default(now())

  @@index([createdAt])
  @@index([eventName])
  @@index([userId])
}

model Purchase {
  id                      String   @id @default(cuid())
  userId                  String
  sku                     String
  stripeCheckoutSessionId String   @unique
  stripePaymentIntentId   String?  @unique
  status                  String
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  @@index([userId])
  @@index([status])
}

model DailyUsage {
  id                 String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id            String
  window_start       DateTime @db.Timestamptz(6)
  window_end         DateTime @db.Timestamptz(6)
  ai_tokens_used     Int      @default(0)
  runs_used          Int      @default(0)
  per_tool_runs_used Json     @default("{}")
  resets_at          DateTime @db.Timestamptz(6)
  updated_at         DateTime @default(now()) @db.Timestamptz(6)

  @@unique([user_id, window_end], map: "DailyUsage_user_window_end_uidx")
  @@index([user_id, window_end], map: "DailyUsage_user_window_end_idx")
}

model Entitlement {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id      String   @unique
  plan         String
  resets_at    DateTime @db.Timestamptz(6)
  tokens_cache Int?
  created_at   DateTime @default(now()) @db.Timestamptz(6)
  updated_at   DateTime @default(now()) @db.Timestamptz(6)

  @@index([user_id])
}

model StripeEvent {
  id        String   @id @default(uuid())
  eventId   String   @unique
  type      String
  createdAt DateTime @default(now())

  @@index([type])
  @@index([createdAt])
}

model VaultItem {
  id        String        @id @default(cuid())
  userId    String
  toolSlug  String?
  kind      VaultItemKind @default(RUN_SNAPSHOT)
  title     String
  body      Json
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@index([userId])
  @@index([toolSlug])
  @@index([userId, kind, createdAt])
}

model ExportEvent {
  id          String   @id @default(cuid())
  userId      String
  toolId      String?
  runId       String?
  vaultItemId String?
  type        String
  createdAt   DateTime @default(now()) @db.Timestamptz(6)

  @@index([userId])
  @@index([toolId])
  @@index([runId])
  @@index([vaultItemId])
  @@index([createdAt])
}

model Organization {
  id                   String               @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name                 String
  slug                 String               @unique
  domain               String?
  plan                 String               @default("business")
  stripeCustomerId     String?              @unique
  stripeSubscriptionId String?              @unique
  seatsIncluded        Int                  @default(1)
  seatsMax             Int                  @default(5)
  walletMode           String               @default("per_seat")
  sharedTokensCache    Int?
  createdAt            DateTime             @default(now()) @db.Timestamptz(6)
  updatedAt            DateTime             @default(now()) @updatedAt @db.Timestamptz(6)
  OrganizationInvite   OrganizationInvite[]
  memberships          OrganizationMember[]

  @@index([domain])
}

model OrganizationMember {
  id           String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  orgId        String       @db.Uuid
  userId       String
  role         String       @default("member")
  status       String       @default("active")
  invitedEmail String?
  invitedBy    String?
  createdAt    DateTime     @default(now()) @db.Timestamptz(6)
  updatedAt    DateTime     @default(now()) @updatedAt @db.Timestamptz(6)
  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "OrganizationMember_org_fk")

  @@unique([orgId, userId], map: "OrganizationMember_org_user_unique")
  @@index([orgId], map: "OrganizationMember_org_idx")
  @@index([userId], map: "OrganizationMember_user_idx")
  @@index([userId, role], map: "OrganizationMember_user_role_idx")
}

model OrganizationInvite {
  id           String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  orgId        String       @db.Uuid
  email        String
  role         String       @default("member")
  token        String       @unique
  expiresAt    DateTime     @db.Timestamptz(6)
  acceptedAt   DateTime?    @db.Timestamptz(6)
  createdAt    DateTime     @default(now()) @db.Timestamptz(6)
  Organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "OrganizationInvite_org_fk")

  @@unique([orgId, email], map: "OrganizationInvite_org_email_unique")
  @@index([email])
  @@index([orgId], map: "OrganizationInvite_org_idx")
}

model AuditLog {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  orgId     String?  @db.Uuid
  userId    String?
  action    String
  targetId  String?
  meta      Json?
  createdAt DateTime @default(now()) @db.Timestamptz(6)

  @@index([action])
  @@index([orgId, createdAt], map: "AuditLog_org_created_idx")
  @@index([orgId], map: "AuditLog_org_idx")
  @@index([userId], map: "AuditLog_user_idx")
}

model ToolRunLog {
  id            String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  orgId         String?  @db.Uuid
  userId        String
  toolId        String
  runId         String   @unique
  meteringMode  String
  tokensCharged Int      @default(0)
  status        String
  lockCode      String?
  durationMs    Int?
  inputSummary  String?
  outputSummary String?
  errorCode     String?
  createdAt     DateTime @default(now()) @db.Timestamptz(6)

  @@index([orgId, createdAt], map: "ToolRunLog_org_created_idx")
  @@index([orgId], map: "ToolRunLog_org_idx")
  @@index([toolId], map: "ToolRunLog_tool_idx")
  @@index([userId, createdAt], map: "ToolRunLog_user_created_idx")
  @@index([userId], map: "ToolRunLog_user_idx")
}

model SupportTicket {
  id        String           @id @default(uuid())
  userId    String
  subject   String
  category  String
  status    String           @default("open")
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  messages  SupportMessage[]
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([status])
}

model SupportMessage {
  id         String        @id @default(uuid())
  ticketId   String
  authorRole String
  authorId   String?
  message    String
  createdAt  DateTime      @default(now())
  ticket     SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)

  @@index([ticketId, createdAt])
  @@index([authorRole])
}

model articles {
  post_id      Int     @id @default(autoincrement())
  post_content String?
  post_title   String?
  post_path    String?
  image_path   String?
  date         String?
}

model WebhookDelivery {
  id           String   @id @default(cuid())
  eventId      String   @unique
  type         String
  customerId   String?
  status       String
  receivedAt   DateTime @default(now())
  processedAt  DateTime?
  errorMessage String?

  @@index([customerId])
  @@index([receivedAt])
  @@index([type])
  @@index([status])

  @@map("webhook_deliveries")
}

model WebhookSecret {
  id         String    @id @default(cuid())
  customerId String
  secret     String
  active     Boolean   @default(true)
  createdAt  DateTime  @default(now())
  rotatedAt  DateTime?
  lastUsedAt DateTime?

  @@index([customerId])
  @@index([active])
}

enum Plan {
  FREE
  DM_ENGINE
  THE_STRATEGY
  ALL_ACCESS
}

enum VaultItemKind {
  RUN_SNAPSHOT
  TEMPLATE
  CHECKLIST
  NOTE
}
